#!/bin/sh

MENU="100 1350"
SPELL="800 1550"
WHISTLE="800 1550"
USE="700 1400"
FIGHT="800 1550"
CONFIRM=$FIGHT

tap() {
	adb shell input swipe $1 $2 $1 $2 100
	sleep 0.3
}

whistle() {
	tap $MENU
	tap $SPELL
	tap $WHISTLE
	tap $USE
	tap $CONFIRM
	sleep 2
}

fight() {
	for i in `seq 8`; do
		tap $FIGHT
		tap $FIGHT
		tap $FIGHT
		tap $FIGHT
		sleep 2
	done
}

round=1
while true; do
	echo -n "round $round: "
	date +%H:%M:%S

	whistle
	fight

	round=$((round + 1))
done
